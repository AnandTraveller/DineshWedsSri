<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_blue"
    tools:context="com.anandroid.dineshwedssri.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/np_appbar_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <!-- app:layout_scrollFlags="snap" -->
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/np_product_collapse_bar"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">
                <!--Collapse Inside-->
                <RelativeLayout
                    android:id="@+id/own_profile_dash_board_display_view_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_toolbar"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/mapla"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:cropToPadding="true"
                        android:src="@drawable/dinesh"
                        app:civ_border_color="#6599FF"
                        app:civ_border_width="2dp" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ponnu"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:src="@drawable/ponnu_image"
                        app:civ_border_color="#6599FF"
                        app:civ_border_width="2dp" />

                    <com.varunest.sparkbutton.SparkButton
                        android:id="@+id/heart_btn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_30sdp"
                        app:sparkbutton_activeImage="@drawable/ic_heart_on"
                        app:sparkbutton_iconSize="40dp"
                        app:sparkbutton_inActiveImage="@drawable/ic_heart_on"
                        app:sparkbutton_primaryColor="@color/heart_primary_color"
                        app:sparkbutton_secondaryColor="@color/heart_secondary_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ponnu"
                        android:fitsSystemWindows="true"
                        android:gravity="center"
                        app:layout_collapseMode="parallax">

                        <com.anandroid.dineshwedssri.countdownview.CountdownView
                            android:id="@+id/cv_countdownViewTest4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            app:isShowDay="true"
                            app:isShowHour="true"
                            app:isShowMillisecond="true"
                            app:isShowMinute="true"
                            app:isShowSecond="true"
                            app:isTimeTextBold="true"
                            app:suffixDay="Days "
                            app:suffixGravity="bottom"
                            app:suffixHour="Hrs "
                            app:suffixMillisecond=""
                            app:suffixMinute="Min "
                            app:suffixSecond="Sec  "
                            app:suffixTextColor="#000000"
                            app:suffixTextSize="12sp"
                            app:timeTextColor="#000000"
                            app:timeTextSize="22sp" />

                    </RelativeLayout>


                </RelativeLayout>


            </android.support.design.widget.CollapsingToolbarLayout>

            <!--Tab Bar-->
            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@color/app_blue_dark_one"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="3dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#00364e"
                app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
                app:tabTextColor="@color/white"></android.support.design.widget.TabLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>
