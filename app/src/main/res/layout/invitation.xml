<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_blue">

    <LinearLayout
        android:id="@+id/first_lay"
        android:layout_width="270dp"
        android:layout_height="110dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_height="110dp"
            android:layout_marginLeft="@dimen/_10sdp">

            <View
                android:id="@+id/view_onr"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/button_black_line_cir_bg"></View>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/view_onr"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@color/app_blue_dark_one"></View>

        </RelativeLayout>

        <!--Reception Layout-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Reception"
                android:textColor="@color/blue"
                android:textSize="@dimen/_15sdp"
                android:textStyle="italic|bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/time_imgae"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/alarm_clock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/time_imgae"
                    android:text="June 3rd, 6pm"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/loc_imgae"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/loc_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/loc_imgae"
                    android:text="@string/address"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/imag_right_top"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/side_corner_new" />

    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/side_corner_blur" />


    <!--Wedding  Corner-->
    <RelativeLayout
        android:id="@+id/second_lay"
        android:layout_width="270dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/first_lay"
        android:layout_marginBottom="@dimen/_40sdp"
        android:orientation="horizontal">
        <!--Wedding Layout-->

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/right_pillar"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Wedding"
                android:textColor="@color/blue"
                android:textSize="@dimen/_15sdp"
                android:textStyle="italic|bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/time_imgae_two"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/alarm_clock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/time_imgae_two"
                    android:text="June 4th Morning 6 AM - 7.30 AM"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/loc_imgae_two"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/loc_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/loc_imgae_two"
                    android:text="@string/address"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/right_pillar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="170dp"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp">

            <View
                android:id="@+id/view_two"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/button_black_line_cir_bg"></View>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/view_two"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@color/app_blue_dark_one"></View>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
